nav.navbar.navbar-default(role='navigation')
    .container-fluid
        .navbar-header
          button.navbar-toggle(type='button' data-toggle='collapse' data-target='#gdocs-nav')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/')
            img#brand-logo(src="assets/images/logo-black.png")
          
        span.navbar-doc-title
            span.form-group
              a.public-button-display.clickable(title="who can see this graph") 
              a.dropdown-toggle(data-toggle='dropdown', href='')
                span#menu-title-display.clickable
                i.caret
                span.dropdown
                  ul.dropdown-menu
                    li
                      a#workspaces-button(href="" data-toggle="modal") Open View
                    li
                      a#save-workspace-button(href="" data-toggle="modal") Save View
                    li
                      a#share-workspace-button(href="" data-toggle="modal") Share View
                    li
                      a#analytics-button(href="" data-toggle="modal" data-target="#analytics-modal") Stats
                    li 
                      a#settings-button(href="" data-toggle="modal") Settings

        #gdocs-nav.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right 
            if isAuthenticated
              li#newgraph-icon
                a(href="/new" target="_blank" title="new graph")
                  img(src="assets/images/newgraph.png")
              li.dropdown
                a.dropdown-toggle(data-toggle='dropdown', href='')
                  | #{user.local.name}
                  i.caret
                ul.dropdown-menu
                  li(role="presentation")
                    a(href="/#{user.local.name}") My Cographs
                  li(role="presentation")
                    a(href="/account") Account
                  li
                    a(href="/logout") Logout
            else
              li
                a(href="/login") Login
