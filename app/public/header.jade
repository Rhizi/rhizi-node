nav.navbar.navbar-default(role='navigation')
    .container-fluid
        .navbar-header
          button.navbar-toggle(type='button' data-toggle='collapse' data-target='#gdocs-nav')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='http://thecograph.com')
            img#brand-logo(src="assets/images/logo.svg")
          
        span.navbar-doc-title
            .form-group
              a.public-button.clickable(title="who can see this graph")
              input#menu-title(type="text" placeholder="Untitled Doc" data-toggle="tooltip" data-placement="bottom" title="Rename Doc")
              span.dropdown
                a.dropdown-toggle(data-toggle='dropdown', href='')
                  i.caret
                  //- if owns else other stuff
                ul.dropdown-menu
                  li(role="presentation")
                    a#workspaces-button(href="", data-toggle="modal", data-target="#workspaces-modal") Open View
                  li(role="presentation")
                    a#save-workspace-button Save View
                  li(role="presentation")
                    a#sharing-button Share View
                  li
                    a#analytics-button(href="" data-toggle="modal" data-target="#analytics-modal") Stats
                  

        #gdocs-nav.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              a#new-doc-button(href="" data-toggle="modal" data-target="#new-doc-modal")
                i.fa.fa-edit
            if isAuthenticated
              li.dropdown
                a.dropdown-toggle(data-toggle='dropdown', href='')
                  | #{user.local.name}
                  i.caret
                ul.dropdown-menu
                  li(role="presentation")
                    a(href="/") Discover
                  li(role="presentation")
                    a(href="/graphs") My Cographs
                  li(role="presentation")
                    a(href="/#{user.local.name}") Profile
                  li(role="presentation")
                    a(href="/account") Account
                  li
                    a(href="/logout") Logout
            else
              li
                a(href="/login") Login
