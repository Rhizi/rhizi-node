doctype html
html(lang="en")
  head
    title GraphDocs
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    base(href='/')
    link(href='/assets/libs/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='/assets/libs/fontawesome/css/font-awesome.min.css', rel='stylesheet')
    link(href='/assets/stylesheets/mobile.css', rel='stylesheet')
    link(href='/assets/stylesheets/typeahead.css', rel='stylesheet')
    script(type='text/javascript', data-main="mobile", src="/assets/libs/requirejs/require.js") //loads mobile.js

  body
    .container#mobile-site
      .row
        .col-xs-12.col-sm-8.col-sm-offset-4.col-md-6.col-md-offset-3
          h2.text-center GraphDocs
          ul.nav.nav-tabs(id="main-tabs")
            li.active
              a(data-target="#node", role="tab", data-toggle="tab") Node
            li
              a(data-target="#connection", role="tab", data-toggle="tab") Connection
          .tab-content
            .tab-pane.active(id="node")
              form(role="form")
                .form-group
                  input.form-control(type="text", name="nodeName", placeholder="Node Name")
                .form-group
                  textarea.form-control(name="nodeDescription", placeholder="Description")
                .form-group
                  input.form-control(type="text", name="nodeTags", placeholder="Tags separated by commas")
                button.btn.btn-success(type="button" id="add-node") Create
                button.btn.btn-default(type="button" id="cancel-node") Cancel
            .tab-pane(id="connection")
              form(role="form")
                .form-group.input-group
                  input.form-control(type="text", name="connectionSource", placeholder="Source Node")
                  span.input-group-btn
                      button.btn.btn-default(type='button') 
                        i.fa.fa-caret-down
                .form-group
                  input.form-control(type="text", name="connectionName", placeholder="Name")
                .form-group
                  textarea.form-control(name="connectionDescription", placeholder="Description")
                .form-group
                  input.form-control(type="text", name="connectionTags", placeholder="Tags separated by commas")
                .form-group.input-group
                    input.form-control(type="text", name="connectionTarget", placeholder="Target Node")
                    span.input-group-btn
                        button.btn.btn-default(type='button') 
                          i.fa.fa-caret-down
                button.btn.btn-success(type="button" id="add-connection") Create
                button.btn.btn-default(type="button" id="cancel-connection") Cancel

