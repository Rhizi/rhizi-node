doctype html
html(lang="en")
  head
    title GraphDocs
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='/assets/libs/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='/assets/libs/fontawesome/css/font-awesome.min.css', rel='stylesheet')
    link(href='/assets/stylesheets/custom.css', rel='stylesheet')
    link(href='/assets/stylesheets/typeahead.css', rel='stylesheet')
    script(type='text/javascript', data-main="main", src="/assets/libs/requirejs/require.js") //loads main.js

  body
    .container
      .row
        .col-xs-12.col-sm-8.col-sm-offset-4.col-md-6.col-md-offset-3
          h2.text-center Enter a Node
          form(role="form")
            .form-group
              label(for="nodeName") Node Name
              input.form-control(type="text", name="nodeName", placeholder="Enter Node Name")
            .form-group
              label(for="nodeDescription") Node Description
              textarea.form-control(name="nodeDescription", placeholder="Enter a Description")
            button.btn.btn-success(type="submit") Create
