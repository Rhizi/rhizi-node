extends layout

block content
  #sidebar
  #graph
    .loading-container
      i.fa.fa-circle-o-notch.fa-spin.fa-5x
    .toolbar.controls
      .navbar-left.navbar-form
        form#search-form.form-inline
          .input-group
            input#search-input.form-control(type="text", name='search-term' placeholder="Search...")
          button#sidebar-toggle.btn.btn-default(title="Toggle Sidebar")
            i.fa.fa-arrows-h
    .toolbar.right.controls
      .navbar-right.navbar-form
        form#add-node-form.form-inline
          #add.contracted
            textarea#add-title(name="name", placeholder='Title', rows='1')
            textarea#add-description(name="description", placeholder='Add Node', rows='1')
            #add-toolbar.cf
              #add-toolbar-left
                button#add-color(data-placement='bottom', data-toggle='popover', data-content='<button type="button" class="btn-color" style="background-color:#aaa" data-value="#aaa" title="#aaa"></button>')
                  i.fa.fa-paint-brush(title="Change color")
                button#add-image(data-placement='bottom', data-toggle='popover', data-content="<input type='text' style='width:100%' placeholder='Image url'>")
                  i.fa.fa-image(title='Add image')
              #add-toolbar-right
                button#add-submit(title='Create node')
                  | Done

    .toolbar.bottom.right.controls
      button#save-workspace-button.btn.btn-primary
        div Save Workspace
      button#sharing-button.btn.btn-primary
        div Share GraphDoc
    #zoom-controls.btn-group-vertical.controls
      button#zoom-in-button.btn.btn-primary(title="Zoom In")
        i.glyphicon.glyphicon-plus
      button#zoom-out-button.btn.btn-primary(title="Zoom Out")
        i.glyphicon.glyphicon-minus
    #trash-bin.controls(title="Drag a node here to Archive it")
      i.fa.fa-archive
  .data-tooltip-container
