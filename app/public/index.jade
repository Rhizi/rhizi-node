extends layout

block content
  #graph
    .toolbar.left.controls
      form#search-form.navbar-form.navbar-left
        .form-group
          input#search-input.form-control(type="text", name='search-term' placeholder="Search...")
        button.btn.btn-primary(type="button")
          i.fa.fa-search
    .toolbar.right.controls
      .navbar-right.navbar-form
        form#add-node-form
    .toolbar.right.bottom.controls
      button#sidebar-toggle.btn.btn-default
        i.fa.fa-arrows-h
    #zoom-controls.bottom.btn-group-vertical.controls
      button#zoom-in-button.btn.btn-primary
        i.glyphicon.glyphicon-plus
      button#zoom-out-button.btn.btn-primary
        i.glyphicon.glyphicon-minus
    #trash-bin.controls
      i.fa.fa-archive
  #sidebar
    #details-container.controls
  .data-tooltip-container
