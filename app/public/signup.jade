html
  head
    title Cograph | Signup
    // For Development
    link(href='/assets/stylesheets/main.css', rel='stylesheet')
    script(type='text/javascript', data-main="/main", src="/assets/libs/requirejs/require.js") //loads main.js

    // For production
    //link(href='/assets/stylesheets/main-built.css', rel='stylesheet')
    //script(type='text/javascript', data-main="/main-built", src="/assets/libs/requirejs/require.js")

    base(href="/")
  body
    include nav
    .container-fluid.pad-top
      .row
        .col-md-6.col-md-offset-3.col-xs-12
          
          h2 Signup
          br
          // show any messages that come back with authentication
          if message && message.length > 0 
            .alert.alert-danger #{message}
          p  
            a(href="/auth/twitter")
              img(src="assets/images/sign-in-with-twitter-gray.png")
          u or
          hr
          // SIGNUP FORM 
          form(action='/signup', method='post').cf
            .form-group
              label Username*
              input.form-control(type='text', name='name')
            .form-group
              label Email*
              input.form-control(type='email', name='email') 
            .form-group
              label Password*
              input.form-control(type='password', name='password')
            button.btn.btn-info.pull-right.btn-lg(type='submit') Signup
          hr
          p
            a(href='/login') Already have an account?
