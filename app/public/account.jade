doctype html
html(lang="en")
head
  title Cograph | #{user.local.email}
  meta(charset='utf-8')
  link(href='/assets/libs/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
  link(href='/assets/libs/fontawesome/css/font-awesome.min.css', rel='stylesheet')
  link(href='/assets/stylesheets/gsdk-base.css', rel='stylesheet')
  link(href='/assets/stylesheets/custom.css', rel='stylesheet')  
  base(href="/")
  script(type='text/javascript', data-main="landing", src="/assets/libs/requirejs/require.js") //loads landing.js
  script.
    window.prefetch =!{JSON.stringify(docs)};

  body
    include profileheader
    .container.pad-top
      .col-sm-6.col-sm-offset-3
        h1
          |  Account
        if message && message.length > 0 
          .alert.alert-danger #{message}

        form(action='/signup', method='post')
          .form-group
            label Email
            input.form-control(type='email', name='email' value='#{user.local.email}')
          .form-group
            label Username
            input.form-control(type='text', name='name'  value='#{user.local.name}')
          .form-group
            label Old Password
            input.form-control(type='password', name='password')
          .form-group
            label New Password
            input.form-control(type='password', name='password')
          button.btn.btn-warning.btn-lg(type='submit') Save Changes