extends layout

block content
  #sidebar
  #graph
    .loading-container
      .spinner
        .double-bounce1
        .double-bounce2
    .toolbar.bottom.right.controls#toolbar-bottom-right
      ul.nav.navbar-nav
        li
          a#filter-modal-toggle(href="" data-toggle="modal" data-target="#filters_template")
            i.fa.fa-filter(title="filter")
        li
          form#search-form.form-inline
            .input-group
              input#search-input.form-control(type="text", name='search-term' placeholder="Search")
        li
          .btn-group-vertical.controls
            button#zoom-in-button.btn.btn-default(title="Zoom In")
              i.glyphicon.glyphicon-plus
            button#zoom-out-button.btn.btn-default(title="Zoom Out")
              i.glyphicon.glyphicon-minus
    #trash-bin.controls(title="Drag a node here to Hide it")
      span#bring-all-nodes-to-view
        i.fa.fa-eye-slash
        span#number-hidden 0
      span#dragging-message
        | Drag here to Hide
      span#hover-message
        span#show-all Show all
        span#hide-all Hide all
  .data-tooltip-container
